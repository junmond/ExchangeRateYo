<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">


    <TextView
        android:id="@+id/txtAlertCurrencyNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미국 USD"
        android:paddingLeft="7dp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txtAlertStandardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기준 : "
        android:paddingLeft="7dp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAlertCurrencyNameValue"/>

    <TextView
        android:id="@+id/txtAlertStandardNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현찰 살 때"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtAlertCurrencyNameValue"
        android:layout_toRightOf="@+id/txtAlertStandardName"/>

    <TextView
        android:id="@+id/txtAlertPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격 : "
        android:paddingLeft="7dp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAlertStandardName"/>

    <TextView
        android:id="@+id/txtAlertPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1109.29"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtAlertStandardName"
        android:layout_toRightOf="@+id/txtAlertPrice"/>

    <Button
        android:text="제거"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:id="@+id/btnRemove" />

</RelativeLayout>