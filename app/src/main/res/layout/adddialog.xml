<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/rLayoutCurrency">

        <TextView
            android:text="Currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/txtCurrency" />

        <Spinner
            android:text="Currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtCurrency"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/spnCurrency" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rLayoutStandard"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/rLayoutCurrency"
        android:layout_marginTop="19dp">

        <TextView
            android:text="Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/txtStandard" />

        <Spinner
            android:text="Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtStandard"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/spnStandard" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/rLayoutStandard"
        android:id="@+id/rLayoutPrice"
        android:layout_marginTop="19dp">

        <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/txtPrice" />

        <EditText
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="4"
            android:layout_toRightOf="@+id/txtPrice"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/edtPrice" />
    </RelativeLayout>
</RelativeLayout>