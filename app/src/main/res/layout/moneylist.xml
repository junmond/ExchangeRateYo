<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtCurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:textSize="15sp"
        android:layout_margin="2dip"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txtBuying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1092.23"
        android:textSize="12sp"
        android:layout_margin="2dip"
        android:paddingLeft="14dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:ems="5"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtCurrencyName"/>

    <TextView
        android:id="@+id/txtSelling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1110.23"
        android:textSize="12sp"
        android:layout_margin="2dip"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:ems="5"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtBuying"/>

    <TextView
        android:id="@+id/txtSending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200.23"
        android:textSize="12sp"
        android:layout_margin="2dip"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:ems="5"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtSelling"/>

    <TextView
        android:id="@+id/txtReceiving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1392.23"
        android:textSize="12sp"
        android:layout_margin="2dip"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:ems="5"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtSending"/>


</RelativeLayout>